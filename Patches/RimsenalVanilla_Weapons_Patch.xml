<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rimsenal - Augmented Vanilla Pack</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!--    Primitive    -->

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "Gun_Blowgun"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_primitive/24/2</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "Gun_ThrowingAxes"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_primitive/24/3</li>
                        </weaponTags>
                    </value>
                </li>

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "Gun_ThrowingClubs"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_none</li>
                        </weaponTags>
                    </value>
                </li>

                <!--    Industrial    -->

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "Bow_Compound"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_industrial</li>
                        </weaponTags>
                    </value>
                </li>

                <!--   Grenades   -->

                <li Class="XmlExtensions.PatchOperationSafeAdd">
                    <xpath>Defs/ThingDef[defName = "Weapon_GrenadeSmoke"]</xpath>
                    <safetyDepth>1</safetyDepth>
                    <value>
                        <weaponTags>
                            <li>ammo_industrial_fire/24/2</li>
                        </weaponTags>
                    </value>
                </li>
                
            </operations>
        </match>
    </Operation>
</Patch>